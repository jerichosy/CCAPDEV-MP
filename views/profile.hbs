        <div class="row">
            <div class="col-md-5">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img
                        class="rounded-circle mt-5 profile-pic-margin" width="150px" src="/images/person.jpg"><span
                        class="font-weight-bold">{{username}}</span>
                    {{!-- <span class="text-black-50">email.com</span><span> </span> --}}
                </div>
            </div>
            <div class="col-md-7">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <form method="post" action="/editprofile" id="editprofile" class="needs-validation">
                        <fieldset disabled id="editFormFields">
                            <div class="mb-3">
                                <label class="form-label" for="fname">First Name</label>
                                <input class="form-control" type="text" name="fname" id="fname" value="{{fname}}"
                                    required />
                                <div class="invalid-feedback">Please provide a first name.</div>
                            </div>

                            <div class=" mb-3">
                                <label class="form-label" for="lname">Last Name</label>
                                <input class="form-control" type="text" name="lname" id="lname" value="{{lname}}"
                                    required />
                                <div class="invalid-feedback">Please provide a last name.</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="bday">Birthday</label>
                                <input class="form-control" type="date" name="bday" id="bday" value="{{bday}}"
                                    required />
                                <div class="invalid-feedback">Please provide a valid birthday.</div>
                            </div>
                        </fieldset>

                        {{!-- <div class="mb-3">
                            <button type="submit" class="btn btn-primary profile-button" id="submit">Save</button>
                        </div> --}}
                        <div class="mt-5 text-center" id="divButtons">
                            <button class="btn btn-secondary profile-button" id="editBtn" type="button">
                                Edit Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

